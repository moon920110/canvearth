<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.canvearth.canvearth.MapsActivity" />

    <com.github.pengrad.mapscaleview.MapScaleView
        android:id="@+id/scaleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="4dp" />

    <LinearLayout
        android:id="@+id/util_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="80dp"
        android:background="#cccccc"
        android:visibility="invisible">

        <Button
            android:id="@+id/colorButton0"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@color/paletteColor0"/>
        <Button
            android:id="@+id/colorButton1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@color/paletteColor1"/>
        <Button
            android:id="@+id/colorButton2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@color/paletteColor2"/>
        <Button
            android:id="@+id/colorButton3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@color/paletteColor3"/>
        <Button
            android:id="@+id/colorButton4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@color/paletteColor4"/>
        <Button
            android:id="@+id/colorButton5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@color/paletteColor5"/>
        <Button
            android:id="@+id/colorButton6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@color/paletteColor6"/>
        <ToggleButton
            android:id="@+id/grid_visibility"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/grid_visible_icon_selector"
            android:layout_gravity="center" />
    </LinearLayout>
    <Button
        android:id="@+id/utilButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_button" />

    <ImageView
        android:id="@+id/userPhotoImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="facebook user photo"
        android:visibility="visible" />
</FrameLayout>