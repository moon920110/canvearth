<resources>

    <declare-styleable name="SketchPlacerView">
        <attr name="sketch_zoomable" format="boolean" />
        <attr name="sketch_translatable" format="boolean" />
        <attr name="sketch_restrictBounds" format="boolean" />
        <attr name="sketch_animateOnReset" format="boolean" />
        <attr name="sketch_doubleTapToZoom" format="boolean" />
        <attr name="sketch_doubleTapToZoomScaleFactor" format="float" />
        <attr name="sketch_autoCenter" format="boolean" />
        <attr name="sketch_minScale" format="float" />
        <attr name="sketch_maxScale" format="float" />
        <attr name="sketch_autoResetMode" format="enum">
            <enum name="UNDER" value="0" />
            <enum name="OVER" value="1" />
            <enum name="ALWAYS" value="2" />
            <enum name="NEVER" value="3" />
        </attr>
    </declare-styleable>
</resources>
